<div class="form-container">
  <p class="legend">
    <strong>Note:</strong>
    Required fields are marked with an asterisk (<em>*</em>)
  </p>
  <%= simple_form_for(@transaction, :validate => true,:html => {:multipart => true }) do |f| %>
      <fieldset>
        <%= f.input :name,:label=>"Request Name",:placeholder=>"Request Name" %>
        <%= f.input :description,:label=>"Request Description",:placeholder=>"Description of Request" %>
        <%= f.input :request_amount,:label=>"Request Amount",:placeholder=>"Amount"%>
        <%= f.label :attachment, :label => 'Upload Attachment'  %>
        <%= f.file_field :attachment %>
        <%= f.input :remarks, :label=>"Remarks",:input_html => { :cols => 50, :rows => 3 } %>
        <%= f.submit 'Save', :disable_with=>'Please wait...' %>
      </fieldset>
  <% end %>
</div>