<% title "VEDAVAAG | Transactions" %>
<h3>VEDAVAAG | Transactions | Manage Transactions</h3>

<% content_for :left_panel do %>
    <td valign="top" width="250"> <%= render 'common/search' %>
      <%= render 'recent' %> </td>
<% end %>
<div class="help_text">
  Area for managing Transactions. <br/>
  Along with creating, managing Transactions for Application.<br/>
</div>
<div class="link_buttons">
  <%= link_to content_tag(:span, 'New Transaction'), new_transaction_path, :class => 'btn-blue' %>
</div>

<% if @transactions.blank? %>
    <div class="error_msg">
      OOPS!.. No Transactions are Found in the System..!
    </div>
<% else %>
    <table width="100%">
      <tr>
        <td align="right">
          <b><i>per page</i></b>
          <%= per_page %>| <%= page_entries_info @transactions %>
        </td>
      </tr>
    </table>
    <table class="tablesorter">
      <thead>
      <tr>
        <th>#</th>
        <th>Status?</th>
        <th>Name</th>
        <th>Date</th>
        <th>Transfer #</th>
        <th>Br. Code</th>
        <th>Remarks</th>
        <th>Records</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% i=1 %>
      <% @transactions.each do |transaction| %>
          <tr>
            <td><%= i %></td>
            <td><%= link_to_active(transaction, approve_transaction_path(transaction)) %></td>
            <td><%= truncate(transaction.name,:length=>10) %></td>
            <td><%= transaction.date? ? transaction.date.strftime("%d-%b-%Y") : "N.A" %></td>
            <td><%= transaction.transfer_account %></td>
            <td><%= transaction.transfer_branch_code %></td>
            <td><%= transaction.remarks? ? (link_to "View", "#", :class => "tipTipRight", :title => transaction.remarks) : "N.A" %></td>
            <td><%= transaction.deals.size %></td>
            <td>
              <%= link_to "View Records", transaction, :class => "usuallink tipTipLeft", :title => "View Records" %>
              |
              <%= link_to "Generate Text", text_report_transaction_path(transaction), :class => "usuallink tipTip", :title => "Generate Text File" %>
            </td>
          </tr>
          <% i = i + 1 %>
      <% end %>
      </tbody>
    </table>
    <div class="flickr_pagination">
      <%= page_entries_info @transactions %> <%= will_paginate @transactions, :container => false %>
    </div>
<% end %>








