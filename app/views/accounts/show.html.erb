<% title "SECC | Account" %>
<div id="page_container">
  <div id="page_content">
    <div class="content">
      <h3>Accounts | View Account Details</h3>

      <table width="100%" border=0 cellspacing=1 cellpadding=3 class="listTable">
        <tr>
          <th width="20%">Name</th>
          <td><%= @account.name %></td>
        </tr>
        <tr>
          <th width="20%">Account</th>
          <td><%= @account.account_number %></td>
        </tr>
        <tr>
          <th width="20%">Bank</th>
          <td><%= @account.bank_name %></td>
        </tr>
        <tr>
          <th width="20%">Branch</th>
          <td><%= @account.branch_name %></td>
        </tr>
        <tr>
          <th width="20%">IFSC</th>
          <td><%= @account.ifsc %></td>
        </tr>
        <tr>
          <th width="20%">Address</th>
          <td><%= @account.address %></td>
        </tr>
      </table>
    </div>
  </div>
</div>

